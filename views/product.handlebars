<div class="product-page">
    <a href="/products">Voltar</a>
    <div class="container">
        <h2>{{product.title}}</h2>
        <p>Este produto tem <strong>( {{product.productqty}} )</strong> qtd</p>
        <div class="actions">
            <a class="btn-edit" href="/products/edit/{{product.id}}">Editar</a>
           <form action="/products/remove/{{product.id}}" method="POST">
            <input type="submit" value="Remover">
            </form>
        </div>
    </div>
</div>